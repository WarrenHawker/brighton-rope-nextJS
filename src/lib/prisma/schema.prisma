// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
id                    Int             @id @default(autoincrement())
title                 String   
description           String
startDate             DateTime
dateTimes             Json 
location              Json
maxTickets            Int
ticketsSold           Int
ticketsRemaining      Int
prices                Json
allowMultipleTickets  Boolean
bookings              Booking[]
waitingList           WaitingList[]
}

model Booking {
id              Int         @id @default(autoincrement())
eventId         Int
event           Event       @relation(fields: [eventId], references: [id])
tickets         Json
totalTickets    Int
contact         Json
amountToPay     Float
hasPaid         Boolean
additionalInfo  String
bookingDate     DateTime
adminNotes      String
}

model WaitingList {
id            Int         @id @default(autoincrement())
eventId       Int
event         Event       @relation(fields: [eventId], references: [id])
name          String
email         String
inquiryDate   String
}


model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  name        String?
  role        Role     @default(ADMIN)
  password    String
}

enum Role {
  ADMIN
  SUPERADMIN
}